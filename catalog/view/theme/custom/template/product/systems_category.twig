{{ header }}
<div id="product-category" class="container">
  <ul itemscope itemtype="http://schema.org/BreadcrumbList" class="breadcrumb">
		{% for key,breadcrumb in breadcrumbs %}
			<li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
				{% if loop.last %}
					<p itemprop="item">
						<span itemprop="name">
							{{ breadcrumb.text }}
						</span>
					</p>
				{% else %}
					<a itemprop="item" href="{{ breadcrumb.href }}">
						<span itemprop="name">
							{{ breadcrumb.text }}
						</span>
					</a>				
				{% endif %}
				{% set position = key + 1 %}
				<meta itemprop="position" content="{{ position }}" />
			</li>
		{% endfor %}
	</ul>
  <div class="row">
    {{ content_top }}
    {{ column_left }}
    {% if column_left and column_right %} {% set class = 'col-sm-6' %} {% elseif
    column_left or column_right %} {% set class = 'col-sm-9' %} {% else %} {%
    set class = 'col-sm-12' %} {% endif %}
    <div id="content" class="{{ class }}">
      {% if thumb %}
      <img src="{{ thumb }}" class="img-responsive" alt="{{ heading_title }}" />

      {% endif %} {% if description %}
      <div class="content-description">
        {{ description }}
      </div>
      {% else %}
      <h1>{{ heading_title }}</h1>
      {% endif %} {% if categories %}
      <div class="subcat flex spb">
        <p class="h3">{{ text_refine }}</p>
        <div class="toggle-sub"><i class="fa fa-angle-down"></i></div>
      </div>
      <ul class="subcategory-list js-toggle-sub">
        {% for category in categories %}
        <li>
          <a href="{{ category.href }}">{{ category.name }}</a>
        </li>
        {% endfor %}
      </ul>
      {% endif %} {% if products %}
      <div class="row">
        <div class="col-md-2 col-sm-6 hidden-xs">
          <div class="btn-group btn-group-sm">
            <button
              type="button"
              id="list-view"
              class="btn btn-default"
              data-toggle="tooltip"
              title="{{ button_list }}"
            >
              <i class="fa fa-th-list"></i>
            </button>
            <button
              type="button"
              id="grid-view"
              class="btn btn-default"
              data-toggle="tooltip"
              title="{{ button_grid }}"
            >
              <i class="fa fa-th"></i>
            </button>
          </div>
        </div>
        <div class="col-md-3 col-sm-6">
          <div class="form-group">
            <a href="{{ compare }}" id="compare-total" class="btn btn-link">{{
              text_compare
            }}</a>
          </div>
        </div>
        <div class="col-md-4 col-xs-6">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-sort">{{
              text_sort
            }}</label>
            <select
              id="input-sort"
              class="form-control"
              onchange="location = this.value;"
            >
              {% for sorts in sorts %} {% if sorts.value == '%s-%s'|format(sort,
              order) %}

              <option value="{{ sorts.href }}" selected="selected">{{
                sorts.text
              }}</option>

              {% else %}

              <option value="{{ sorts.href }}">{{ sorts.text }}</option>

              {% endif %} {% endfor %}
            </select>
          </div>
        </div>
        <div class="col-md-3 col-xs-6">
          <div class="form-group input-group input-group-sm">
            <label class="input-group-addon" for="input-limit">{{
              text_limit
            }}</label>
            <select
              id="input-limit"
              class="form-control"
              onchange="location = this.value;"
            >
              {% for limits in limits %} {% if limits.value == limit %}

              <option value="{{ limits.href }}" selected="selected">{{
                limits.text
              }}</option>

              {% else %}

              <option value="{{ limits.href }}">{{ limits.text }}</option>

              {% endif %} {% endfor %}
            </select>
          </div>
        </div>
      </div>
      <div class="row">
        {% for product in products %}
        <div class="product-layout product-list col-xs-12">
          <a data-fancybox data-src="#modal" class="product-thumb">
            <div class="image">
              <img
                data-src="{{ product.thumb }}"
                alt="{{ product.name }}"
                class="img-responsive"
              />
            </div>

            <div class="caption">
              <p class="product-name">123{{ product.name }}</p>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>

      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% endif %} {% if not categories and not products %}
      <p>{{ text_empty }}</p>
      <div class="buttons">
        <div class="pull-right">
          <a href="{{ continue }}" class="btn btn-primary">{{
            button_continue
          }}</a>
        </div>
      </div>
      {% endif %}
    </div>
    {{ column_right }}

    <div class="cat-form flex">
      <img
        data-src="/catalog/view/theme/custom/image/cat-form-min.jpg"
        class="img-responsive"
        alt="консультация 100 дверей"
      />
      <div class="cat-form-inner">
        <p class="cat-form-title">
          Не можете найти интересующую Вас дверь? <br />Мы Вам поможем!
        </p>
        <p class="cat-form-subtitle">
          Обратитесь к нам по телефону <br /><span>+7 (495) 021-55-32</span>
          <br />или заполните форму обратной связи
        </p>
        <form
          class="forma-form cat-form-forma"
          action="telegram.php"
          method="POST"
        >
          <input type="tel" name="phone" placeholder="Ваш телефон.." required />
          <input type="hidden" name="page" value="{{ title }}" />
          <input type="hidden" name="form_subject" value="Форма с Викой" />
          <input type="submit" value="Перезвоните мне" />
        </form>
      </div>
    </div>
  </div>
</div>

{{ content_bottom }}

{{ footer }}
